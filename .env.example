# App Configuration
# Copy this file to .env.local and fill in your values
# .env.local is gitignored and will not be committed

# Public Environment Variables (accessible in browser)
# These must be prefixed with NEXT_PUBLIC_
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="My App"

# Server-Only Environment Variables
# These are only available on the server side

# Database
# DATABASE_URL="postgresql://user:password@localhost:5432/mydb"
# DATABASE_URL="mysql://user:password@localhost:3306/mydb"

# Authentication (uncomment and fill in when using auth providers)
# NEXTAUTH_SECRET="your-secret-key-here"
# NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (examples)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"

# API Keys
# OPENAI_API_KEY="sk-..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Email Service (examples)
# RESEND_API_KEY="re_..."
# SENDGRID_API_KEY="SG...."

# Analytics (examples)
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
# NEXT_PUBLIC_POSTHOG_KEY="phc_..."

# Feature Flags
# NEXT_PUBLIC_ENABLE_ANALYTICS=false
# NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# Other Services
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"

# Add your custom environment variables below